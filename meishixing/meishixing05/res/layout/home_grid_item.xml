<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/home_grid_item_head_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/home_grid_item_foodname_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textColor="@color/red"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/home_grid_item_foodprice_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginLeft="10dp"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/home_grid_item_comment_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginLeft="5dp"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/home_grid_item_time"
            style="@style/index_waterfall_item_textview"
            android:drawableLeft="@drawable/waterfall_time" />

        <TextView
            android:id="@+id/home_grid_item_heart"
            style="@style/index_waterfall_item_textview"
            android:drawableLeft="@drawable/waterfall_heart" />

        <TextView
            android:id="@+id/home_grid_item_eye"
            style="@style/index_waterfall_item_textview"
            android:drawableLeft="@drawable/waterfall_eye" />

        <TextView
            android:id="@+id/home_grid_item_comment_count_tv"
            style="@style/index_waterfall_item_textview"
            android:drawableLeft="@drawable/waterfall_comment" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffcdcdcd" />
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/home_grid_item_bottom_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/home_grid_item_bottom_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textColor="@color/red"
                android:textSize="10sp" />

            <TextView
                android:textColor="@color/red"
                android:id="@+id/home_grid_item_bottom_place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/home_grid_item_bottom_from_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>