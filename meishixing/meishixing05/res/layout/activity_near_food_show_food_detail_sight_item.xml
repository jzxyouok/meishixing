<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_near_food_show_food_detail_sight_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/activity_near_food_show_food_detail_sight_userimg"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_gravity="top|left|center"
            
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"/>

        <LinearLayout
            android:id="@+id/activity_near_food_show_food_detail_sight_midlayout"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:padding="0.0dip" >

            
			<LinearLayout 
			    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2.0dip"
                android:gravity="top|left|center"
			    android:orientation="horizontal"
			    
			    >
			    <TextView
                android:id="@+id/activity_near_food_show_food_detail_sight_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="14.0sp"
                android:textStyle="bold" 
                />
			    <TextView 
			        android:id="@+id/activity_near_food_show_food_detail_sight_level_title"
			        android:layout_marginLeft="5dp"
			        android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
			        android:textSize="10.0sp"
			        android:textColor="#ff000000"
			   
			        />
			</LinearLayout>
    

            <TextView
                android:id="@+id/activity_near_food_show_food_detail_sight_desc"
                style="@style/place_detail_text_base"
                android:layout_marginTop="2.0dip"
                android:gravity="left|center"
                android:textSize="14.0sp" 
                android:text="dsad"
             />

        </LinearLayout>

        <ImageView
            android:id="@+id/activity_near_food_show_food_detail_sight_foodimg"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
              android:scaleType="fitXY"
            android:layout_gravity="top|right|center" 
            android:src="@drawable/ic_launcher"/>
    </LinearLayout>

</LinearLayout>