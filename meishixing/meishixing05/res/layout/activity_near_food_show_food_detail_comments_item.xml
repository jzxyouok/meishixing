<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_near_food_show_food_detail_comment_row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <com.project.meishixing.views.CircleImageView
            android:id="@+id/activity_near_food_show_food_detail_comment_img_url"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="top|left|center"
            android:scaleType="centerCrop" 
            android:onClick="xxx"/>
        

        <LinearLayout
            android:id="@+id/activity_near_food_show_food_detail_comment_midlayout"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:padding="0.0dip" >
			
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2.0dip"
                android:drawableRight="@null"
                android:gravity="top|left|center"
                android:singleLine="true"
                android:orientation="horizontal"
                >
                <TextView
                android:id="@+id/activity_near_food_show_food_detail_comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="14.0sp"
                android:textStyle="bold"
             
                />
                <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/activity_near_food_show_food_detail_comment_replied_user"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"         
                android:gravity="center"
                android:textColor="#ff000000"
                android:textSize="10.0sp"
                 />
                
            </LinearLayout>
           

            <TextView
                android:id="@+id/activity_near_food_show_food_detail_comment_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:gravity="left|center"
                android:textColor="@color/recdish_simple_color"
                android:textSize="14.0sp" 
              
               />

          
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_near_food_show_food_detail_comment_reply"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:paddingLeft="7.0dip"
            android:paddingRight="3.0dip" 
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/reply_comment" />
        </LinearLayout>
    </LinearLayout>

</TableRow>