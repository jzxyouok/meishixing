<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f00" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/header_menu_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="足迹与收藏"
            android:textColor="#fff"
            android:textSize="17sp" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_collec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_collec_looked"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/radiobt_collec_selector_lef"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="我的足迹"
            android:textColor="#fff"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rb_collec_lollec"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/radiobt_collec_selector_rig"
            android:button="@null"
            android:gravity="center"
            android:text="我的收藏"
            android:textColor="#fff"
            android:textSize="13sp" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_collec"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>